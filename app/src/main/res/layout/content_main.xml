<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebe0"
    android:paddingTop="41dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="10dp"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="medicine.android.com.medicine.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Location should appear here."
        android:id="@+id/textView7"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cardview3"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="160dp"
        android:layout_height="200dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="140dp"
            android:layout_marginTop="20dp"
            android:layout_height="110dp"
           android:background="@drawable/backy"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/photo"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Photo"

            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="150dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="160dp"
        android:layout_marginStart="175dp"
        android:layout_height="200dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="100dp"



        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="140dp"
            android:layout_marginTop="20dp"
            android:layout_height="110dp"
            android:background="@drawable/backy"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/l"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="medicine"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="150dp"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview3"
        android:layout_marginTop="221dp"
        android:layout_width="160dp"
        android:layout_height="200dp"

        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="100dp"



        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="140dp"
            android:layout_marginTop="20dp"
            android:layout_height="110dp"
            android:background="@drawable/backy"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/l"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="medicine"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="150dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview4"
        android:layout_width="160dp"
        android:layout_marginStart="175dp"
           android:layout_marginTop="221dp"
        android:layout_height="200dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="100dp"



        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="140dp"
            android:background="@drawable/backy"
            android:layout_marginTop="20dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/l"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="medicine"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="150dp"
            />
    </android.support.v7.widget.CardView>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebe0"
    android:paddingTop="11dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="10dp"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="medicine.android.com.medicine.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Location should appear here."
        android:id="@+id/textView7"
        android:layout_marginTop="10dp"

        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="200dp"

        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
           android:background="@drawable/backy"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/photo"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Photo Options: \n\nCamera\n\nGallery"

            android:gravity="center"
            android:layout_marginStart="190dp"
            android:layout_marginTop="40dp"
            android:layout_alignTop="@+id/cardview"
            android:layout_alignEnd="@+id/textView7" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="200dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="100dp"


        android:layout_below="@+id/cardview"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
            android:background="@drawable/backy"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/application_list_icon"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="List Down\n\nall the \n\nmedicines"
            android:gravity="center"
            android:layout_marginStart="200dp"
            android:layout_marginTop="30dp"
            android:layout_alignTop="@+id/cardview"
            android:layout_alignEnd="@+id/textView7"
            />
    </android.support.v7.widget.CardView>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="medicine.android.com.medicine">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="Medicine"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.SplashActivity" />
        </activity>
        <activity
            android:name=".Orders"
            android:label="@string/title_activity_orders"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.MainActivity" />
        </activity>
        <activity
            android:name=".Contact"
            android:label="@string/title_activity_contact"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.MainActivity" />
        </activity>
        <activity
            android:name=".Upload"
            android:label="@string/title_activity_upload"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.MainActivity" />
        </activity>
        <activity
            android:name=".ListDown"
            android:label="@string/title_activity_list_down"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.MainActivity" />
        </activity>
        <activity
            android:name=".Gallery_Upload"
            android:label="Gallery"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.MainActivity" />
        </activity>
        <activity
            android:name=".Login"
            android:label="Medicine"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".GetLocation" />

        <service
            android:name=".GeocodeAddressIntentService"
            android:exported="false" />

        <activity
            android:name=".Cart"
            android:label="@string/title_activity_cart"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.MainActivity" />
        </activity>
        <activity
            android:name=".Checkout"
            android:label="@string/title_activity_checkout"
            android:parentActivityName=".Cart"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="medicine.android.com.medicine.Cart" />
        </activity>
    </application>

</manifest>
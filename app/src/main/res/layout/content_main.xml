<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebe0"
    android:paddingTop="11dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="10dp"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="medicine.android.com.medicine.MainActivity"
    tools:showIn="@layout/app_bar_main">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:gravity="center"
       android:text="Choose Method of Order :"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
       android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Other Options :"
        android:layout_below="@+id/cardview"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Location should appear here."
        android:id="@+id/textView7"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/cardview3"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
           android:background="@drawable/backy"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/photo"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Photo"

            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="130dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="175dp"
        android:layout_height="160dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="100dp"



        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:background="@drawable/backy"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/l"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Listdown"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="130dp"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview3"
        android:layout_marginTop="251dp"
        android:layout_width="160dp"
        android:layout_height="160dp"

        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="100dp"



        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:background="@drawable/backy"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/l"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Orders"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="130dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview4"
        android:layout_width="160dp"
        android:layout_marginStart="175dp"
           android:layout_marginTop="251dp"
        android:layout_height="160dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="16dp"
        android:elevation="100dp"



        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        >
        <ImageView
            android:layout_width="100dp"
            android:background="@drawable/backy"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/l"

            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Setting"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="130dp"
            />
    </android.support.v7.widget.CardView>



</RelativeLayout>
